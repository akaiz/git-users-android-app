<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="350dp"
                                             android:layout_height="475dp"
                                             android:id="@+id/linearLayout"
                                             android:background="#323541">


    <ImageView
            android:layout_width="118dp"
            android:layout_height="118dp" tools:srcCompat="@tools:sample/avatars"
            android:id="@+id/user_image" android:layout_marginTop="40dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
    />
    <ImageButton
            android:layout_width="40dp"
            android:layout_height="31dp" app:srcCompat="@android:drawable/ic_menu_close_clear_cancel"
            android:id="@+id/close_button" android:layout_marginTop="4dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="4dp" android:layout_marginRight="4dp"/>
    <TextView
            android:text="Name"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:id="@+id/user_name"
            android:layout_marginTop="28dp" app:layout_constraintTop_toBottomOf="@+id/user_image"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.501" android:textColor="@android:color/white"
            android:textSize="18sp"/>
    <TextView
            android:text="Followers"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/user_followers" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/user_name" android:textColor="@android:color/white"
            android:textSize="14sp"/>
</android.support.constraint.ConstraintLayout>
